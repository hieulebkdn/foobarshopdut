    <div class="product-big-title-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="product-bit-title text-center">
                        <h2>Shop</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div style="margin-left:20px; padding-bottom:200px; margin-right:50px;">
        <div style="width:300px;float: left">
            <form action="" style="padding-top:20px;" >
                <input type="text" placeholder="Search products...">
                <input type="submit" value="Search">
            </form>
            <form action="" style="padding-top:20px;" >
                <select>
                    <option disabled selected>sort...</option>
                    <option value="a-z">A-Z</option>
                    <option value="price">Price</option>
                </select>
                <input type="submit" value="Sort by">
            </form>
        </div>
        <div style="float:right;list-style-type:none;padding-top:20px">
            <form>
                <div style="width:200px;float:right;padding-left:20px">
                    <h3 style="color:#5a88ca">Price</h3>
                    <input type="radio" name="price" value="low">
                    <label>0-1000$</label></br>
                    <input type="radio" name="price" value="medium">
                    <label>1000-2000$</label></br>
                    <input type="radio" name="price" value="high">
                    <label>2000-3000$</label></br>
                </div>
                <div style="width:200px;float:right;padding-left:20px">
                    <h3 style="color:#5a88ca">Rating</h3>
                    <input type="radio" name="rate" value="1">
                    <label>
                        <span class="fa fa-star"></span>
                    </label></br>
                    <input type="radio" name="rate" value="2">
                    <label>
                        <span class="fa fa-star"></span>
                        <span class="fa fa-star"></span>
                    </label></br>
                    <input type="radio" name="rate" value="3">
                    <label>
                        <span class="fa fa-star"></span>
                        <span class="fa fa-star"></span>
                        <span class="fa fa-star"></span>
                    </label></br>
                </div>
                <div style="width:200px;float:right;padding-left:20px">
                    <h3 style="color:#5a88ca">Brand</h3>
                    <input type="radio" name="brand" value="dell">
                    <label>Dell</label></br>
                    <input type="radio" name="brand" value="asus">
                    <label>MSI</label></br>
                    <input type="radio" name="brand" value="msi">               
                    <label>Asus</label></br>
                    <input type="radio" name="brand" value="apple">
                    <label>Apple</label></br>
                </div>
                <div style="width:200px;float:right;padding-left:20px;padding-bottom:20px;">
                    <h3 style="color:#5a88ca">Categories</h3>
                    <input type="radio" name="cate" value="laptop">
                    <label>Laptop</label></br>  
                    <input type="radio" name="cate" value="desktop">
                    <label>Desktop</label></br>
                    <input type="radio" name="cate" value="tablet">             
                    <label>Tablet</label></br>
                    <input type="radio" name="cate" value="phone">
                    <label>Phone</label></br>
                </div>
                <div style="padding-left:320px;">
                    <input type="submit" value="Filter">
                </div>
            </form>
        </div>
    </div>  
    
    <div class="single-product-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <% @products.each do |product| %>
                <div class="col-md-3 col-sm-6">
                    <div class="single-shop-product">
                        <div class="product-upper">
                            <%= image_tag product.image.url(:medium), class: "image-product-size" %>
                        </div>
                        <h2><%= link_to product.name, controller: "products", action: "show", id: product.id %> </h2>
                        <div class="product-carousel-price">
                            <ins> $<%= product.price %> </ins> <del>$<%= format("%.2f", product.price * 1.2 ) %></del>
                        </div>  

                        <div class="product-option-shop">
                            <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70" rel="nofollow" href="/canvas/shop/?add-to-cart=70">Add to cart</a>
                        </div>                       
                    </div>
                </div>
                <% end %>


            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="product-pagination text-center">
                        <nav>
                          <ul class="pagination">
                            <li>
                              <a href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li>
                          <a href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>                        
        </div>
    </div>
</div>
</div>
