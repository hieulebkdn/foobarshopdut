<% provide(:title, @user.name) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
				<%= @user.email %>
				<%= @user.phone %>
				<%= @user.city %>
				<%= @user.address %>
				<%= @user.gender %>
				<%= @user.dob %>
				<%= image_tag @user.avatar.url(:thumb) %>
			</h1>
		</section>
	</aside>
</div>
