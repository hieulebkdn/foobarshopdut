<% provide(:title, "Change password") %>
<h1> Change your password </h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: password_change_path(current_user)) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :password, "Current Password" %>
      <%= f.password_field :old_password, class: 'form-control' %>

      <%= f.label :password, "New Password" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Change password", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>