<% cart.line_items.each do |line_item| %>
<tr class="cart_item">
    <td class="product-remove">
        <%= link_to 'Delete', line_item, method: :delete, data: { confirm: 'Hieu deo cho xoa dau' } %>
    </td>

    <td class="product-thumbnail">
        <%= link_to image_tag("product-thumb-3.jpg", :border=>0, ), controller: "products", action: "show", id: line_item.product.id%> 
    </td>

    <td class="product-name">
        <%= link_to line_item.product.name, controller: "products", action: "show", id: line_item.product.id%> 
    </td>

    <td class="product-price">
        <span class="amount">£<%= line_item.product.price%></span> 
    </td>
    
    <td class="product-quantity">
        <div class="quantity buttons_added">                
            <input type="number" size="4" class="input-text qty text" name=<%= "quantity#{line_item.id.to_s}"%> value=<%=line_item.quantity %> min="1" step="1">                
            <button class="add-button" type="submit">f5</button>
        </div>
    </td>


        <td class="product-subtotal">
            <span class="amount">£<%= line_item.total_price%></span> 
        </td>
    </tr>

<% end %>