<p id="notice"><%= notice %></p>
<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Weight</th>
      <th>Image</th>
      <th>Stock</th>
      <th>Detail</th>
      <th>Description</th>
      <th>Rating</th>
      <th>Cpu</th>
      <th>Ram</th>
      <th>Memory</th>
      <th>Display</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.weight %></td>
        <td><%= product.image %></td>
        <td><%= product.stock %></td>
        <td><%= product.detail %></td>
        <td><%= product.description %></td>
        <td><%= product.rating %></td>
        <td><%= product.cpu %></td>
        <td><%= product.ram %></td>
        <td><%= product.memory %></td>
        <td><%= product.display %></td>
        <td><%= link_to 'Details', product %></td>
        <% if admin_logged_in? %>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if admin_logged_in? %>
  <div>
    <h4>Import data</h4>
      <%= form_tag import_products_path, multipart: true do %>
      <%= file_field_tag :file %>
      <%= submit_tag "Import" %>
    <% end %>
  </div>

  <%= link_to 'New Product', new_product_path %>
<% end %> 
