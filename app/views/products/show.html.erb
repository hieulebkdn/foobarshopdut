<div class="single-product-area">
  <div class="zigzag-bottom"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <div class="single-sidebar">
          <h2 class="sidebar-title">Search Products</h2>
          <form action="">
            <input type="text" placeholder="Search products...">
            <input type="submit" value="Search">
          </form>
        </div>

        <div class="single-sidebar">
          <h2 class="sidebar-title">Trending Product</h2>

          <% @trendingProduct.each do |product| %>
          <div class="thubmnail-recent">
            <%= image_tag product.image.url(:medium), class: "recent-thumb" %>
            <h2><%= link_to product.name, controller: "products", action: "show", id: product.id %></h2>
            <div class="product-sidebar-price">
              <ins> $  <%= product.price%> </ins> <del>$ <%= format("%.2f", product.price * 1.2 ) %></del>
            </div>                             
          </div>
          <% end %>    
        </div>

        <div class="single-sidebar">
          <h2 class="sidebar-title">Recently View</h2>
          <ul>
            <li><a href="">Sony Smart TV - 2015</a></li>
            <li><a href="">Sony Smart TV - 2015</a></li>
            <li><a href="">Sony Smart TV - 2015</a></li>
            <li><a href="">Sony Smart TV - 2015</a></li>
            <li><a href="">Sony Smart TV - 2015</a></li>
          </ul>
        </div>
      </div>

      <div class="col-md-8">
        <div class="product-content-right">
          <div class="product-breadcroumb">
            <a href="">Home</a>
            <a href="">Category Name</a>
            <a href="">Sony Smart TV - 2015</a>
            <%= Product.joins(:category).first.name%>
            <%= @product.name %>
          </div>

          <div class="row">
            <div class="col-sm-6">
              <div class="product-images">
                <div class="product-main-img">
                  <%= image_tag @product.image.url(:medium), class: "image-product-size" %>
                </div>

                <div class="product-gallery">
                  <p>
                    <strong>Weight:</strong>
                    <%= @product.weight %>
                  </p>

                  <p>
                    <strong>Cpu:</strong>
                    <%= @product.cpu %>
                  </p>

                  <p>
                    <strong>Ram:</strong>
                    <%= @product.ram %>
                  </p>

                  <p>
                    <strong>Memory:</strong>
                    <%= @product.memory %>
                  </p>

                  <p>
                    <strong>Display:</strong>
                    <%= @product.display %>
                  </p>
                </div>
              </div>
            </div>

            <div class="col-sm-6">
              <div class="product-inner">
                <h2 class="product-name"><%= @product.name%></h2>
                <div class="product-inner-price">
                  <ins>$<%= @product.price%> </ins> <del>$<%= format("%.2f", @product.price * 1.2 ) %></del>
                </div>    

                <form action="" class="cart">
                  <div class="quantity">
                    <input type="number" size="4" class="input-text qty text" title="Qty" value="1" name="quantity" min="1" step="1">
                  </div>
                  <button class="add_to_cart_button" type="submit">Add to cart</button>
                </form>   

                <div class="product-inner-category">
                  <p>
                    <strong>Stock:</strong>
                    <%= @product.stock %>
                  </p>
                </div> 

                <div role="tabpanel">
                  <ul class="product-tab" role="tablist">

                    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Detail</a></li>
                    <li role="presentation"><a href="#description" aria-controls="home" role="tab" data-toggle="tab">Description</a></li>
                    <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Reviews</a></li>

                  </ul>
                  <div class="tab-content">

                    <div role="tabpanel" class="tab-pane fade in active" id="home">
                      <h2>Product Detail</h2>  
                      <p><%= @product.detail %></p>
                    </div>

                    <div role="tabpanel" class="tab-pane fade in active" id="description">
                      <h2>Product Description</h2>  
                      <p><%= @product.description %></p>
                    </div>

                    <div role="tabpanel" class="tab-pane fade" id="profile">
                      <h2>Reviews</h2>
                      <div class="submit-review">
                        <p><label for="name">Name</label> <input name="name" type="text"></p>
                        <p><label for="email">Email</label> <input name="email" type="email"></p>
                        <div class="rating-chooser">
                          <p>Your rating</p>

                          <div class="rating-wrap-post">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                          </div>
                        </div>
                        <p><label for="review">Your review</label> <textarea name="review" id="" cols="30" rows="10"></textarea></p>
                        <p><input type="submit" value="Submit"></p>
                      </div>
                    </div>

                  </div>
                </div>

              </div>
            </div>
          </div>


          <div class="related-products-wrapper">
            <h2 class="related-products-title">Related Products</h2>
            <div class="related-products-carousel">
