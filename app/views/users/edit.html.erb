<% provide(:title, "Edit User") %>

<%= form_for(@user) do |f| %>
<%= render 'layouts/header1' %>

<div class="container">
  <div class="row profile">
    <div class="col-md-3">
      <div class="profile-sidebar">
        <div class="profile-userpic">
          <%= image_tag @user.avatar.url(:thumb) %>
          </div>
          <div class="profile-usertitle">
            <div class="profile-usertitle-name">
              <%= @user.name %>
            </div>
          </div>
          <div class="profile-usermenu">
            <ul class="nav">
              <li id="proInfo"><%= link_to "Profile", current_user %></li>
              <li class="active"  id="proChangePass"><%= link_to "Edit Profile", edit_user_path(current_user) %></li>
              <li id="proChangePass"><%= link_to "Change Password", edit_password_change_path(current_user) %></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-md-9">
        <div class="profile-content">
          <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
              <form id="signupform" action="https://id.foody.vn/tai-khoan" class="form-horizontal ng-pristine ng-valid" method="post" role="form" novalidate="novalidate">        
              <div class="form-group">
                  <label class="control-label col-md-4"></label>
                  <div class="col-md-8">
                    <h3 style="margin:0">Edit Your Profile</h3>
                  </div>
                </div>
                <input name="__RequestVerificationToken" type="hidden" value="VCI9ivTcI57abGPtru1YIto15j-chLG8tjF-n2GiACtUzRZIscZx8f6HKzDVzKB8uzhpz4GKGJ1vsXzLHSbaXvPmeEPl0jXJfW2_-IfTktI1">
                <div class="form-group">
                    <label class="control-label col-md-4">Name</label>
                    <div class="col-md-8">
                      <%= f.text_field :name, class: "input100-s" %>
                    </div>
                    </div>

                      <div class="form-group">
                        <label class="control-label col-md-4">Email</label>
                        <div class="col-md-8">
                          <%= f.email_field :email, class: "input100-s" %>
                        </div>
                      </div>

                      <div class="form-group">
                        <label class="control-label col-md-4">Phone</label>
                        <div class="col-md-8">
                          <%= f.text_field :phone, class: "input100-s" %>
                        </div>
                      </div>

                      <div class="form-group">
                        <label class="control-label col-md-4">City</label>
                        <div class="col-md-8">
                          <%= f.text_field :city, class: "input100-s" %>
                        </div>
                      </div>

                      <div class="form-group">
                        <label class="control-label col-md-4">Address</label>
                        <div class="col-md-8">
                          <%= f.text_field :address, class: "input100-s" %>
                        </div>
                      </div>
                      
                      <div class="form-group">
                        <label class="control-label col-md-4">Avatar</label>
                        <div class="col-md-8">
                          <%= f.file_field :avatar, class: "radio"%>
                        </div>
                      </div>
                      
                    <div class="form-group">
                      <label class="control-label col-md-4"></label>
                      <div class="col-md-8">
                        <input type="submit" value="Save Changes" id="bt_submit" class="btn btn-primary" style="width: 200px;">
                      </div>
                    </div>
                </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

