<% provide(:title, @product.name) %>
<%= render 'layouts/header1' %>

<div class="product-big-title-area">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="product-bit-title text-center">
          <h2>Shop</h2>
        </div>
      </div>
    </div>
  </div>
</div>
</div>


<div class="single-product-area">
  <div class="zigzag-bottom"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <div class="single-sidebar">
          <h2 class="sidebar-title">Search Products</h2>
          <form action="">
            <input type="text" placeholder="Search products...">
            <input type="submit" value="Search">
          </form>
        </div>

        <div class="single-sidebar">
          <h2 class="sidebar-title">Trending Product</h2>

          <% @trendingProduct.each do |product| %>
          <div class="thubmnail-recent">
            <%= image_tag product.image.url(:medium), class: "recent-thumb" %>
            <h2><%= link_to product.name, controller: "products", action: "show", id: product.id %></h2>
            <div class="product-sidebar-price">
              <ins> $  <%= product.price%> </ins> <del>$ <%= format("%.2f", product.price * 1.2 ) %></del>
            </div>                             
          </div>
          <% end %>    
        </div>

        <div class="single-sidebar">
          <h2 class="sidebar-title">Recently View</h2>
          <ul>
            <li><a href="">Sony Smart TV - 2015</a></li>
            <li><a href="">Sony Smart TV - 2015</a></li>
            <li><a href="">Sony Smart TV - 2015</a></li>
            <li><a href="">Sony Smart TV - 2015</a></li>
            <li><a href="">Sony Smart TV - 2015</a></li>
          </ul>
        </div>
      </div>

      <div class="col-md-8">
        <div class="product-content-right">
          <div class="product-breadcroumb">
            <a href="">Home</a>
            <a href="">Category Name</a>
            <a href="">Sony Smart TV - 2015</a>
            <%= @product.category.name %>
            <%= @product.name %>
          </div>

          <div class="row">
            <div class="col-sm-6">
              <div class="product-images">
                <div class="product-main-img">
                  <%= image_tag @product.image.url(:medium), class: "image-product-size" %>
                </div>

                <div class="product-gallery">
                  <p>
                    <strong>Weight:</strong>
                    <%= @product.weight %>
                  </p>

                  <p>
                    <strong>Cpu:</strong>
                    <%= @product.cpu %>
                  </p>

                  <p>
                    <strong>Ram:</strong>
                    <%= @product.ram %>
                  </p>

                  <p>
                    <strong>Memory:</strong>
                    <%= @product.memory %>
                  </p>

                  <p>
                    <strong>Display:</strong>
                    <%= @product.display %>
                    <p>&emsp;</p> 
                  </p>
                  <div id="section-comment-title" >
                    <%= render 'comments'%>
                  </div>

                </div>
              </div>
            </div>

            <div class="col-sm-6">
              <div class="product-inner">
                <h2 class="product-name"><%= @product.name%></h2>
                <div class="product-inner-price">
                  <ins>$<%= @product.price%> </ins> <del>$<%= format("%.2f", @product.price * 1.2 ) %></del>
                </div>    

                <form action="/line_items/create" method="post">
                  <div class="quantity">
                    <input type="number" size="4" class="input-text qty text" title="Qty" value="1" name="quantity" min="1" step="1" />
                  </div>
                  <input name="product_id" type="hidden" value=<%=@product.id%>  />
                  <input name="card_id" type="hidden" value=<%=@cart.id%>  />
                  <button class="add-button" type="submit">Add to Cart!</button>
                </form>

                <div class="product-inner-category">
                  <p>
                    <strong>Stock:</strong>
                    <%= @product.stock %>
                  </p>
                </div> 

                <div role="tabpanel">
                  <ul class="product-tab" role="tablist">

                    <% if admin_logged_in? %>
                    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Detail</a></li>

                    <li role="presentation">
                      <%= link_to "Edit Product", edit_product_path(@product) %>
                    </li>
                    <% else %>
                    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Detail</a></li>
                    <li role="presentation"><a href="#description" aria-controls="home" role="tab" data-toggle="tab">Description</a></li>
                    <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Reviews</a></li>
                    <% end %>

                  </ul>
                  <div class="tab-content">

                    <div role="tabpanel" class="tab-pane fade in active" id="home">
                      <h2>Product Detail</h2>  
                      <p><%= @product.detail %></p>
                    </div>

                    <div role="tabpanel" class="tab-pane fade" id="description">
                      <h2>Product Description</h2>  
                      <p><%= @product.description %></p>
                    </div>

                    <div role="tabpanel" class="tab-pane fade" id="profile">
                      <h2>Your Review</h2>

                      <div>
                        <div id="section-comment-form" >
                          <%= render 'comment_form'%>
                        </div>

                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="related-products-wrapper">
            <h2 class="related-products-title">Recently Viewed</h2>
            <div class="related-products-carousel">
              <div class="single-product">

                <% @recently_viewed.each do |product| %>
                <%= image_tag product.image.url(:medium), class: "image-size" %>
                <h2><a href=""><%=product.name%></a></h2>
                <div class="product-carousel-price">
                  <ins>$<%= product.price%></ins> <del>$<%= format("%.2f", product.price * 1.2 ) %></del>
                </div> 
              </div>

              <div class="single-product">
                <div class="product-f-image">
                  
                  
                </div>
                <% end %>
              </div>
            </div>
          </div>                    
        </div>
      </div>
    </div>
  </div>
</div>